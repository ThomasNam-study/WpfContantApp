<Window x:Class="ContactApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactApp"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"></TextBox>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"></TextBox>
            <TextBox x:Name="phoneNumberTextBox" Margin="0,0,0,5"></TextBox>
            <Button x:Name="saveButton" Content="Save" Click="SaveButton_OnClick"></Button>
        </StackPanel>
    </Grid>
</Window>
