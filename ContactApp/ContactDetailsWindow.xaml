<Window x:Class="ContactApp.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactApp"
        mc:Ignorable="d"
        Title="ContactDetailsWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"></TextBox>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"></TextBox>
            <TextBox x:Name="phoneNumberTextBox" Margin="0,0,0,5"></TextBox>
            <Button x:Name="updateButton" Content="Update" Margin="0,5,0,5" Click="updateButton_Click"></Button>
            <Button x:Name="deleteButton" Content="Delete" Background="Red" Foreground="AliceBlue" Margin="0,5,0,5" Click="deleteButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
